<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context="com.manager.appbanhang.activity.SplashActivity">

    <ImageView
        android:layout_width="428dp"
        android:layout_height="732dp"
        android:background="@drawable/logo"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splashtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-560dp"
        android:text="               LUẬN VĂN TỐT NGHIỆP"
        android:textColor="#FF0505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtdetai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-560dp"
        android:text="    Xây dựng ứng dụng bán điện thoại"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/txtsv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-560dp"
        android:text=" SV: Lường Thị Mai"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtlopsv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-560dp"
        android:text=" Lớp: DHTI14A2HN"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtsv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-560dp"
        android:text="  SV: Thân Thị Hà"
        android:layout_marginLeft="220dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/txtlopsv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-560dp"
        android:text=" Lớp: DHTI14A4HN"
        android:layout_marginLeft="220dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686"
        tools:layout_editor_absoluteX="16dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="460dp"
        app:layout_constraintTop_toBottomOf="@+id/splashtext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/loading" />

</androidx.constraintlayout.widget.ConstraintLayout>