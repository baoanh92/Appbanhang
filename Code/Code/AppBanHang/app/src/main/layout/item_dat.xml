<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/itemdt_image"
            android:layout_weight="3"
            android:src="@drawable/iconnew"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/itemdt_ten"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/itemdt_mota"
                android:textSize="15sp"
                android:text="ID:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/emailbuy"
                android:textSize="15sp"
                android:text="Người đặt:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: "

                ></TextView>
            <TextView
                android:id="@+id/ngaygiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngay giao: "

                ></TextView>
            <TextView
                android:id="@+id/ghichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chu: "

                ></TextView>
            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: "
                android:textColor="@android:color/holo_red_light"
                ></TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>